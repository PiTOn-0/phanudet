#!/bin/bash
# Settings Reboot
clear
if [ ! -e /usr/local/bin/settings_reboot ]; then
	echo "#!/bin/bash" > /usr/local/bin/settings_reboot 
	echo 'tanggal=$(date +"%d-%m-%Y")' >> /usr/local/bin/settings_reboot 
	echo 'waktu=$(date +"%T")' >> /usr/local/bin/settings_reboot 
	echo 'echo -e "\e[0;37m         Successfully Reboot On $tanggal Time $waktu." >> /root/reboot-log.txt' >> /usr/local/bin/settings_reboot 
	echo ""
	echo '/sbin/shutdown -r now' >> /usr/local/bin/settings_reboot 
	chmod +x /usr/local/bin/settings_reboot
fi

echo -e "\e[0m                                                   "
echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
echo -e "\e[0m                                                   "
echo -e "\e[0;37m                    AutoScriptVPN by PR Aiman   "
echo -e "\e[0m                                                   "
echo -e "\e[0;37m                    [1] Reboot Every 1 Hour"
echo -e "\e[0;37m                    [2] Reboot Every 2 Hours"
echo -e "\e[0;37m                    [3] Reboot Every 12 Hours"
echo -e "\e[0;37m                    [4] Reboot Once A Day"
echo -e "\e[0;37m                    [5] Reboot Once A Week"
echo -e "\e[0;37m                    [6] Reboot Once A Month"
echo -e "\e[0;37m                    [7] View Log Reboot"
echo -e "\e[0;37m                    [8] Remove Reboot"
echo -e "\e[0;37m                    [9] Back"
echo -e "\e[0;37m                    [x] Exit"
echo -e "\e[0m                                                   "
read -p "              Select From Options [1-9 or x] : " REBOOT
echo -e "\e[0m                                                   "
echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
clear
case $REBOOT in
		1)
		clear
		echo "10 * * * * root /usr/local/bin/settings_reboot" > /etc/cron.d/settings_reboot
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                    AutoScriptVPN by PR Aiman   "
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                   Auto-Reboot Set Every Hour   "
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo ""
        read -sp " กด Enter เพื่อย้อนกลับ"
        echo ""
        setreboot
        ;;
		2)
		clear
		echo "10 */6 * * * root /usr/local/bin/settings_reboot" > /etc/cron.d/settings_reboot
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                    AutoScriptVPN by PR Aiman   "
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                  Auto-Reboot Set Every 2 Hours "
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo ""
        read -sp " กด Enter เพื่อย้อนกลับ"
        echo ""
        setreboot
        ;;
		3)
		clear
		echo "10 */12 * * * root /usr/local/bin/settings_reboot" > /etc/cron.d/settings_reboot
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                    AutoScriptVPN by PR Aiman   "
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                  Auto-Reboot Set Every 12 Hours"
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo ""
        read -sp " กด Enter เพื่อย้อนกลับ"
        echo ""
        setreboot
        ;;
		4)
		clear
		echo "10 0 * * * root /usr/local/bin/settings_reboot" > /etc/cron.d/settings_reboot
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                    AutoScriptVPN by PR Aiman   "
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                    Auto-Reboot Set Once A Day  "
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo ""
        read -sp " กด Enter เพื่อย้อนกลับ"
        echo ""
        setreboot
        ;;
		5)
		clear
		echo "10 0 */7 * * root /usr/local/bin/settings_reboot" > /etc/cron.d/settings_reboot
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                    AutoScriptVPN by PR Aiman   "
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                   Auto-Reboot Set Once A Week  "
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo ""
        read -sp " กด Enter เพื่อย้อนกลับ"
        echo ""
        setreboot
        ;;
		6)
		clear
		echo "10 0 1 * * root /usr/local/bin/settings_reboot" > /etc/cron.d/settings_reboot
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                    AutoScriptVPN by PR Aiman   "
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                   Auto-Reboot Set Once A Month "
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo ""
        read -sp " กด Enter เพื่อย้อนกลับ"
        echo ""
        setreboot
        ;;
		7)
		clear
		if [ ! -e /root/reboot-log.txt ]; then
	         echo -e "\e[0m                                                   "
		     echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		     echo -e "\e[0m                                                   "
		     echo -e "\e[0;37m                    AutoScriptVPN by PR Aiman   "
		     echo -e "\e[0m                                                   "
			 echo -e "\e[1;31m                    No Reboot Activity Found    "
			 echo -e "\e[0m                                                   "
		     echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
			 echo -e "\e[0m                                                   "
			 echo ""
             read -sp " กด Enter เพื่อย้อนกลับ"
             echo ""
             setreboot
	         else 
	         echo -e "\e[0m                                                   "
		     echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		     echo -e "\e[0m                                                   "
		     echo -e "\e[0;37m                    AutoScriptVPN by PR Aiman   "
		     echo -e "\e[0m                                                   "
			 echo -e "\e[\e[0;37m                          LOG REBOOT         "
			 echo -e "\e[0m                                                   "
			 cat /root/reboot-log.txt
			 echo -e "\e[0m                                                   "
		     echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
			 echo -e "\e[0m                                                   "
			 echo ""
             read -sp " กด Enter เพื่อย้อนกลับ"
             echo ""
             setreboot
        fi
		exit
		;;
		8)
		clear
		rm -f /etc/cron.d/settings_reboot
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                    AutoScriptVPN by PR Aiman   "
		echo -e "\e[0m                                                   "
		echo -e "\e[0;37m                       Auto-Reboot Removed      "
		echo -e "\e[0m                                                   "
		echo -e "\e[1;31m     [*][*][*]======================================[*][*][*]"
		echo ""
        read -sp " กด Enter เพื่อย้อนกลับ"
        echo ""
        setreboot
        ;;
		9)
		clear
		options
		exit
		;;
		x)
		clear
		exit
		;;
		*)
        setreboot
		;;
	esac